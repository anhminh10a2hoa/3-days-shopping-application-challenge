@model IEnumerable<demo_web_2.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="col-6">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    Add new product
                </a>
            </div>
        }

    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        @if (User.Identity.IsAuthenticated)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Product name
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Amount
                        </th>
                        <th class="text-center">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td width="30%">@p.Name</td>
                            <td width="30%">@p.Category</td>
                            <td width="10%">@p.Price</td>
                            <td width="10%">@p.Amount</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Product" asp-route-Id="@p.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                        Edit
                                    </a>
                                    <a asp-controller="Product" asp-route-Id="@p.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="container mt-2">
                <div class="row">
                    @foreach (var p in Model)
                    {
                    <div class="col-md-3 col-sm-6 item">
                        <div class="card item-card card-block">
                            <img src="https://5.imimg.com/data5/SH/GC/MY-8764775/mens-t-shirt-500x500.jpg" alt="Photo of sunset">
                            <h5 class="item-card-title mt-3 mb-3">@p.Name</h5>
                            <p class="card-text"><b>Price:</b> @p.Price</p>
                            <p class="card-text">@p.Category</p>
                        </div>
                    </div>
                    }
                </div>
            </div>
        }


    }
    else
    {
        <p>No product available.</p>
    }

</div>

